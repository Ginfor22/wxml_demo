.quan{
  background-color: rgb(235, 235, 235);
  height: 1500rpx
}
.cart{
  margin-top: 30rpx;
  width: 100%;
  height: 150rpx;
  background-color: rgb(255, 255, 255);
}
.cart .check{
  float: left;
  margin-top: 40rpx;
  margin-left: 20rpx;
}
.cart .img{
  float: left;
}
.cart .img image{
  width: 150rpx;
  height: 125rpx;
  margin-top: 10rpx;
}
.cart .name{
  color: #000;
}
.cart .price{
  color: red;
}
.cart .cart_num_tool{
  margin-left:72%;
  margin-top:-10%;
  display: flex;
}
.cart .cart_num_tool .num_edit{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart .cart_num_tool .goods_num{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.footer_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.footer_tool .all_chk_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer_tool .total_price_wrap{
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.footer_tool .total_price_wrap .yunfei{
  margin-top: -5rpx;
  font-size: 30rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_text{
  color:red;
  font-size: 30rpx;
  font-weight: 600;
}
.footer_tool .order_pay_wrap{
  flex: 2;
  background-color: red;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}

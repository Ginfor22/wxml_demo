/* pages/login/login.wxss */
.allcon{
  position: fixed;
  background-color: #D3D3D3;
  width: 100%;  
  height:100%;
  }
.login-icon{
    width:100%;
    height:400rpx;
  }
.login-icon image{
    width:350px;
    height: 400rpx;
  }
.img{
  width: 80rpx;
  height: 80rpx;
  }
.login{
  display: flex; 
  padding: 20rpx;
  margin:30rpx 30rpx 0 30rpx; 
  background-color: whitesmoke 
  }
.login image{
    width:60rpx;
    height: 60rpx;
    margin-top: 16rpx;
    } 
.loginname{
  margin-left:20rpx;
  margin-top:20rpx;
  } 
.inputName{
  margin-left:20rpx; 
  margin-top:20rpx; 
  text-align: right;
  }
.pwd{
  display: flex; 
  padding: 20rpx;
  background-color: whitesmoke;
  margin:5rpx 30rpx 0 30rpx; 
  }
.pwd image{
    width:60rpx;
    height: 60rpx;
    margin-top: 16rpx;
    } 
.inputPwd{
  margin-left:20rpx;  
  margin-top:20rpx; 
  text-align: right;
  }  
.btn {
  display: flex; 
  width: 100%;
  height: 130rpx;
  }
.btn .loginbtn{
  width: 70%;
  margin-top:20px;
  background-color: #ca6924;
  display: flex;
  flex-direction: column;
  vertical-align:middle;
  }
.btn .registerbtn{
    width: 70%;
    margin-top:20px;
    background-color: #ca6924;
    display: flex;
    flex-direction: column;
    vertical-align:middle;
  }
.btn text{
    font-size: 33rpx;
    text-align: center;
    line-height: 75rpx;
  }
.btn-hover{
    position: relative;
    top: 3rpx;
    box-shadow:0px 0px 8px #999 inset; 
  }
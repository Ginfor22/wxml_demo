/* 内容区域 */
.page {
  margin-left: 10rpx;
  margin-right: 10rpx;
}
/* 导航栏 */
.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
} 
.tab-item {
  display: flex;
  margin-right: 20rpx;
  text-align: center;
  font-size: 15px;
  color: #a78e44;
} 
.majorCon{
  display:flex;
  padding:15rpx 0;
  flex-wrap:nowrap;
  width:1000rpx;
}
.on{
  color:#2F4F4F;
  border-bottom:1px solid #a78e44;
  padding-bottom: 10rpx;
}
.swiper {
  height:2800px;
  float: left;
  width: 100%;
  margin-right: 15rpx;
} 
.swiper .shangpin{
  width:48%;
  height:550rpx;
  margin-top: 30rpx;
  margin-left: 1%;
  float:left;
  position:relative;
  box-shadow:1px 1px 5px rgb(175, 175, 175);
}
.swiper .shangpin image{
  width:100%;
  height:400rpx;
}
.swiper .shangpin .like-text{
  color:black;
  font-size: 30rpx;
}
.swiper .shangpin .like-price{
  color:#a78e44;
  font-size: 38rpx;
}
.swiper .shangpin .icon{
  width:70rpx;
  height:70rpx;
  position: absolute;
  top:470rpx;
  right:30rpx;
}
.swiper .shangpin .icon image{
  width:100%;
  height:100%;
}
